package model;

import org.json.simple.JSONObject;

public class Enemy {
	// variables
	private int type;
	private int health;
	private float duration;
	private int damage;
	
	//constructor
	public Enemy(int type, int health, float duration, int damage) {
		this.type = type;
		this.health = health;
		this.duration = duration;
		this.damage = damage;
	}

	// get
	public int getType() {
		return type;
	}

	public int getHealth() {
		return health;
	}

	public float getDuration() {
		return duration;
	}

	public int getDamage() {
		return damage;
	}
	
	
	public JSONObject toJSONObject(){
		JSONObject objEnemy = new JSONObject();
		objEnemy.put("type", this.type);
		objEnemy.put("health", this.health);
		objEnemy.put("duration", this.duration);
		objEnemy.put("damage", this.damage);
		return objEnemy;
	}

}
